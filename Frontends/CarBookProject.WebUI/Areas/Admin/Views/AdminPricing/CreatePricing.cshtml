@model CreatePricingDto

@{
	ViewData["Title"] = "CreatePricing";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yeni Pricing Bilgisi</h4>
						<p class="card-subtitle mb-4">Pricing ile ilgili bilgileri eksiksiz doldurmanız önemlidir. Veri Girişinden sonra Kaydet butonuna basınız. Pricing alanı oluşturdak sonra eskisini silin. Sadece 1 Pricing verisi olmalı</p>

						<form method="post">

							<div class="form-group">
								<label for="exampleInputName">Ödeme Türü</label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Ödeme Türü Giriniz">
							</div>
					
							<button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
						</form>

					</div> <!-- end card-body-->
				</div>
			</div>
		</div>
	</div>
</div>
