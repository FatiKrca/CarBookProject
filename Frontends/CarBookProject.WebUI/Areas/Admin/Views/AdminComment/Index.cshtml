@model List<ResultCommentDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;

}


<div class="page-content">
	<div class="container-fluid">
		<!-- start page title -->
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Yorum Listesi- Blog ID: @ViewBag.blogId</h4>
						<p class="card-subtitle mb-4">
							Blog ekleme ve güncelleme sayfası.
						</p>
						<div class="row">
							@foreach (var item in Model)
							{
								count++;
								<div class="col-md-6">
									<div class="card">
										<h5 class="card-header">Yorum - @count</h5>
										<div class="card-body">
											<h4 class="card-title">@item.Name</h4>
											<p class="card-text">
												@item.Description
											</p>
											<a href="#" class="btn btn-primary waves-effect waves-light">Yorumu Kaldır</a>
										</div>
									</div>
								</div>
							}
						</div>
					
					</div>
					<!-- end card-body-->
				</div>
				<!-- end card -->

			</div>
			<!-- end col -->
			<!-- end col -->
		</div>        <!-- end page title -->

	</div> <!-- container-fluid -->
</div>



