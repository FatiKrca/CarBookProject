@model List<ResultContactDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;

}
<!-- Plugins css -->
<link href="@Url.Content("~/Admin/plugins/datatables/dataTables.bootstrap4.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Admin/plugins/datatables/responsive.bootstrap4.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Admin/plugins/datatables/buttons.bootstrap4.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Admin/plugins/datatables/select.bootstrap4.css")" rel="stylesheet" type="text/css" />

<div class="page-content">
	<div class="container-fluid">
		<!-- start page title -->
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Gelen Mesaj Sayfası</h4>
						<p class="card-subtitle mb-4">
							Site Üzerindne iletişim sayfasıyla gönderilen mesaşların olduğu yer.
						</p>

						<table id="basic-datatable" class="table dt-responsive nowrap">
							<thead>
								<tr>
									<th>#</th>
									<th>Gönderen</th>
									<th>Konu</th>
									<th>Tarih</th>
									<th>Email</th>
									<th>Mesaj</th>
								</tr>
							</thead>


							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Name</td>
										<td>@item.Subject</td>
										<td>@item.SendDate.ToShortDateString()</td>
										<td>@item.Email</td>
										<td>@item.Message</td>
									</tr>
								}


							</tbody>
						</table>

					</div> <!-- end card body-->
				</div> <!-- end card -->
			</div><!-- end col-->
		</div>
	</div> <!-- container-fluid -->
</div>

