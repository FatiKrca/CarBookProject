@model List<ResultAuthorDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;

}


<div class="page-content">
	<div class="container-fluid">
		<!-- start page title -->
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Yazar Listesi</h4>
						<p class="card-subtitle mb-4">
							Yazar Ekleme sayfası.
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>

									<tr>
										<th>#</th>
										<th>Ad Soyad </th>

										<th>Açıklama</th>
										<th>Sil</th>
										<th>Güncelle</th>
										<th>Yazarın Blogları</th>

									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;

										<tr>
											<th scope="row">@count</th>
											<td>
												<img src="@item.ImageUrl" width="50" height="50" style="margin-right:10px; vertical-align:middle;" />
												@item.Name
											</td>

											<td>@item.Description</td>
											<td><a href="/Admin/AdminAuthor/RemoveAuthor/@item.AuthorId" class="btn btn-outline-danger">Sil</a></td>
											<td><a href="/Admin/AdminAuthor/UpdateAuthor/@item.AuthorId" class="btn btn-outline-success">Güncelle</a></td>
											<td><a href="/Admin/AdminAuthor/UpdateAuthor/@item.AuthorId" class="btn btn-outline-success">yazarın Blogları</a></td>
										</tr>
									}
								</tbody>
							</table>
							<a href="/Admin/AdminAuthor/CreateAuthor/" class="btn btn-outline-primary">Yeni Author Ekle</a>
						</div>

					</div>
					<!-- end card-body-->
				</div>
				<!-- end card -->

			</div>
			<!-- end col -->
			<!-- end col -->
		</div>        <!-- end page title -->

	</div> <!-- container-fluid -->
</div>




