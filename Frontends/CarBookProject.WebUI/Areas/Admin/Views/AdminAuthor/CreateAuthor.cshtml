@model CreateAuthorDto

@{
	ViewData["Title"] = "CreateAuthor";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yeni Author Bilgisi</h4>
						<p class="card-subtitle mb-4">Author ile ilgili bilgileri eksiksiz doldurmanız önemlidir. Veri Girişinden sonra Kaydet butonuna basınız. Author alanı oluşturdak sonra eskisini silin. Sadece 1 Author verisi olmalı</p>

						<form method="post">

							<div class="form-group">
								<label for="exampleInputTName">İsim</label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="İsim Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputDescription">Açıklama</label>
								<input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputImageUrl">Resim URL</label>
								<input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Resim URL Giriniz">
							</div>
							
							<button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
						</form>

					</div> <!-- end card-body-->
				</div>
			</div>
		</div>
	</div>
</div>

