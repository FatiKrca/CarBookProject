@model CreateTestimonialDto

@{
	ViewData["Title"] = "CreateTestimonial";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yeni Testimonial Bilgisi</h4>
						<p class="card-subtitle mb-4">Testimonial ile ilgili bilgileri eksiksiz doldurmanız önemlidir. Veri Girişinden sonra Kaydet butonuna basınız. Testimonial alanı oluşturdak sonra eskisini silin. Sadece 1 Testimonial verisi olmalı</p>

						<form method="post">

							<div class="form-group">
								<label for="exampleInputName">İsim</label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="İsim Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputTitle">Ünvan</label>
								<input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Ünvan Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputComment">Açıklama</label>
								<input type="text" class="form-control" id="exampleInputComment" asp-for="Comment" placeholder="Açıklama Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputImageUrl">Resim Url</label>
								<input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Resim Url Giriniz">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
						</form>

					</div> <!-- end card-body-->
				</div>
			</div>
		</div>
	</div>
</div>
