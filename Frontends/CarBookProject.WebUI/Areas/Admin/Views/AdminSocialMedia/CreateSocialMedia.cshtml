@model CreateSocialMediaDto

@{
	ViewData["Title"] = "CreateSocialMedia";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yeni SocialMedia Bilgisi</h4>
						<p class="card-subtitle mb-4">SocialMedia ile ilgili bilgileri eksiksiz doldurmanız önemlidir. Veri Girişinden sonra Kaydet butonuna basınız. SocialMedia alanı oluşturdak sonra eskisini silin. Sadece 1 SocialMedia verisi olmalı</p>

						<form method="post">

							<div class="form-group">
								<label for="exampleInputName">Başlık</label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Başlık Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputUrl">URL</label>
								<input type="text" class="form-control" id="exampleInputUrl" asp-for="Url" placeholder="URL Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputIcon">Icon</label>
								<input type="text" class="form-control" id="exampleInputIcon" asp-for="Icon" placeholder="Icon Giriniz">
							</div>
							
							<button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
						</form>

					</div> <!-- end card-body-->
				</div>
			</div>
		</div>
	</div>
</div>
