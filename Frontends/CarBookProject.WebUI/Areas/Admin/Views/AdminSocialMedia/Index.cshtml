@model List<ResultSocialMediaDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;

}


<div class="page-content">
	<div class="container-fluid">
		<!-- start page title -->
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Sosyal Meda Listesi</h4>
						<p class="card-subtitle mb-4">
							Sosyal Medya işlemleri sayfası.
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>

									<tr>
										<th>#</th>
										<th>Başlık</th>
										<th>Link</th>
										<th>Icon</th>
										<th>Sil</th>
										<th>Güncelle</th>
										<th>Aç</th>

									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;

										<tr>
											<th scope="row">@count</th>
											<td>@item.Name</td>
											<td>@item.Url</td>
											<td>@item.Icon</td>
											<td><a href="/Admin/AdminSocialMedia/RemoveSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Sil</a></td>
											<td><a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-success">Güncelle</a></td>
											<td><a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-dark">Aç</a></td>
										</tr>
									}
								</tbody>
							</table>
							<a href="/Admin/AdminSocialMedia/CreateSocialMedia/" class="btn btn-outline-primary">Yeni SocialMedia Ekle</a>
						</div>

					</div>
					<!-- end card-body-->
				</div>
				<!-- end card -->

			</div>
			<!-- end col -->
			<!-- end col -->
		</div>        <!-- end page title -->

	</div> <!-- container-fluid -->
</div>



