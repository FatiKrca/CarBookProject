@model UpdateFooterAdressDto

@{
	ViewData["Title"] = "UpdateFooterAdress";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}






<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yeni FooterAdress Bilgisi</h4>
						<p class="card-subtitle mb-4">FooterAdress ile ilgili bilgileri eksiksiz doldurmanız önemlidir. Veri Girişinden sonra Kaydet butonuna basınız. FooterAdress alanı oluşturdak sonra eskisini silin. Sadece 1 FooterAdress verisi olmalı</p>

						<form method="post">
							<input type="hidden" asp-for="FooterAddressId" />

							<div class="form-group">
								<label for="exampleInputDescription">Açıklama</label>
								<input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputAdress">Açık Adres</label>
								<input type="text" class="form-control" id="exampleInputAdress" asp-for="Adress" placeholder="Açık Adres Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputPhone">Telofon Numarası</label>
								<input type="text" class="form-control" id="exampleInputPhone" asp-for="Phone" placeholder="Telofon Numarası Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputEmail">Email</label>
								<input type="text" class="form-control" id="exampleInputEmail" asp-for="Email" placeholder="Email  Giriniz">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
						</form>

					</div> <!-- end card-body-->
				</div>
			</div>
		</div>
	</div>
</div>

