@model List<ResultFooterAdressDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;

}


<div class="page-content">
	<div class="container-fluid">
		<!-- start page title -->
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Footer Adres Bölümü </h4>
						<p class="card-subtitle mb-4">
							Footer Adres ekleme sayfası.
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>

									<tr>
										<th>#</th>
										<th>Açıklama</th>
										<th>Açık Adres</th>
										<th>Telefon</th>
										<th>Mail</th>
										<th>Sil</th>
										<th>Güncelle</th>

									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;

										<tr>
											<th scope="row">@count</th>
											<td>@item.Description</td>
											<td>@item.Adress</td>
											<td>@item.Phone</td>
											<td>@item.Email</td>
											<td><a href="/Admin/AdminFooterAdress/RemoveFooterAdress/@item.FooterAddressId" class="btn btn-outline-danger">Sil</a></td>
											<td><a href="/Admin/AdminFooterAdress/UpdateFooterAdress/@item.FooterAddressId" class="btn btn-outline-success">Güncelle</a></td>
										</tr>
									}
								</tbody>
							</table>
							<a href="/Admin/AdminFooterAdress/CreateFooterAdress/" class="btn btn-outline-primary">Yeni FooterAdress Ekle</a>
						</div>

					</div>
					<!-- end card-body-->
				</div>
				<!-- end card -->

			</div>
			<!-- end col -->
			<!-- end col -->
		</div>        <!-- end page title -->

	</div> <!-- container-fluid -->
</div>



