@model UpdateFeatureDto

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Araç Güncelleme Sayfası</h4>
						<p class="card-subtitle mb-4">Araç özelliği ile ilgili bilgileri eksiksiz doldurmanız önemlidir. Veri Girişinden sonra Kaydet butonuna basınız</p>

						<form method="post">
							<input type="hidden" asp-for="FeatureId" />
							
							
							<div class="form-group">
								<label for="exampleInputName">Özellik Adı </label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Araç Özellik AdıGiriniz">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
						</form>

					</div> <!-- end card-body-->
				</div>
			</div>
		</div>
	</div>
</div>


