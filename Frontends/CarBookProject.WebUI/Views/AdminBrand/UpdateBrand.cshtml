@model UpdateBrandDto

@{
	ViewData["Title"] = "UpdateBrand";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Marka Güncelleme Sayfası</h4>
						<p class="card-subtitle mb-4">Marka ile ilgili bilgileri eksiksiz doldurmanız önemlidir. Veri Girişinden sonra Kaydet butonuna basınız</p>

						<form method="post">
							<input type="hidden" asp-for="BrandId" />


							<div class="form-group">
								<label for="exampleInputName">Marka Adı </label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Marka AdıGiriniz">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
						</form>

					</div> <!-- end card-body-->
				</div>
			</div>
		</div>
	</div>
</div>


